h3 SECTOR BALANCE ({{name | uppercase}}) : &nbsp;{{position | currency}}

.row
  .col-xs-3
    h4 Add New Stock(s):
    form(name='stockForm', novalidate)
      .form-group
        label(for='symbol') Symbol
        input.form-control#symbol(type='text', name='symbol', ng-model='stock.symbol')
      .form-group
        label(for='quantity') Quantity
        input.form-control#quantity(type='number', name='quantity', ng-model='stock.quantity')
      .form-group
        button.btn.btn-success(type='submit', ng-click='purchase(stock)') Purchase Stock
  .col-xs-9
    h4 Current Holdings in Sector:
    table.table.table-striped
      thead
        tr
          th Action
          th Symbol
          th Purchase Price
          th Quantity
          th Position
          th Purchased
      tbody
        tr(ng-repeat='stock in stocks')
          td: button.btn.btn-danger.btn-xs(ng-click='sell(stock, $index)') Sell
          td {{stock.symbol}}
          td {{stock.quote | currency}}
          td {{stock.quantity}}
          td {{stock.position | currency}}
          td {{stock.purchasedOn | date:'yyyy-MM-dd'}}
